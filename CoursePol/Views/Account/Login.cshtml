@{
    Layout = null;
}

@model LoginModel
<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" asp-href-include="~/lib/css/bootstrap.css">
    <link rel="stylesheet" asp-href-include="~/lib/css/style.min.css">
    <link rel="stylesheet" asp-href-include="~/lib/css/responsive.css">
    <style>
        .single-input {
            background-color: rgba(220,215,215,0.2);
        }

        .bf-account-inner {
            background-color: #fff;
            padding: 3rem;
            border-radius: 1rem;
            box-shadow: 0 0 10rem rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <div class="container" style="padding-top: 6rem;">
        <div class="d-lg-flex justify-content-center rounded">

            <form method="post" asp-controller="Account" asp-action="Login" class="bf-account-inner">

                <div>
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">


                        <label asp-for="Email" class="typo-list"></label><br />
                        <input asp-for="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your Email'" required="" class="single-input">
                    </div>
                    <div class="form-group">


                        <label asp-for="Password" class="typo-list"></label><br />
                        <input asp-for="Password" placeholder="Enter your password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your password'" required="" class="single-input">
                    </div>
                    <div class="form-group">

                        <div class="primary-checkbox" style="display:inline-block">
                            <input type="checkbox" id="default-checkbox">
                            <label for="default-checkbox"></label>
                        </div>
                        <p style="display:inline-block">Remember</p>


                    </div>
                </div>

                <div class="form-group">

                    <input type="submit" class="genric-btn success radius" value="Login" style="width:100%;margin-top:10px" />
                    @* <a class="genric-btn success radius" asp-action="Register">Register</a>*@
                </div>
            </form>

        </div>
    </div>
</body>
</html>

