@model CoursePol.Models.ViewModels.EditUserViewModel
@{
    ViewBag.Title = "Edit Users";
    Layout = "_AdminLayout";
}
<div class="col-md-10" id="content">
    <div class="row">
        <div class="col-md-6">
            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title">Edit User</div>
                </div>
                <div class="panel-body">
                    <form asp-action="Edit" asp-controller="User">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Name</label>
                            <input type="text" asp-for="Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Surname" class="control-label">Surname</label>
                            <input type="text" asp-for="Surname" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="MiddleName" class="control-label">Middle Name</label>
                            <input type="text" asp-for="MiddleName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="DateBirthday" class="control-label">Date Birthday</label>
                            <input type="date" asp-for="DateBirthday" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Institute" class="control-label">Institute</label>
                            <input type="text" asp-for="Institute" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Department" class="control-label">Department</label>
                            <input type="text" asp-for="Department" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Faculty" class="control-label">Faculty</label>
                            <input type="text" asp-for="Faculty" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Group" class="control-label">Group</label>
                            <input type="text" asp-for="Group" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
