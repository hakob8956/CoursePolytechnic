@model IEnumerable<User>
@{
    Layout = "_AdminLayout";
    ViewBag.Title = "Users List";
}

<div class="col-md-10" id="content">
    <div class="row">
        <div class="col-md-11">
            <div class="content-box-large">
                <div class="panel-heading">
                    <div class="panel-title">Users Table</div>
                    <div class="panel-options">
                        <a asp-action="Create" asp-controller="User" style="font-size:large" title="Add User"><i class="fas fa-plus-circle"></i></a>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table">
                        <tr>
                            <th scope="col">Email</th>
                            <th scope="col">Name</th>
                            <th scope="col">SurName</th>
                            <th scope="col">MiddleName</th>
                            <th scope="col">DateBirthday</th>
                            <th scope="col">DateRegister</th>
                            <th scope="col">Institute</th>
                            <th scope="col">Department</th>
                            <th scope="col">Faculty</th>
                            <th scope="col">Group</th>

                        </tr>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td scope="col">@user.Email</td>
                                <td>@user.Name</td>
                                <td>@user.Surname</td>
                                <td>@user.MiddleName</td>
                                <td>@user.DateBirthday</td>
                                <td>@user.DateRegister</td>
                                <td>@user.Institute</td>
                                <td>@user.Department</td>
                                <td>@user.Faculty</td>
                                <td>@user.Group</td>

                                <td>
                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" id="myForm">
                                        <a class="btn btn-sm btn-primary normalButton" asp-action="Edit" asp-route-id="@user.Id" asp-controller="User" title="Edit"><i class="fas fa-user-edit"></i></a>
                                        <a class="btn btn-sm btn-primary normalButton" asp-action="ChangePassword" asp-route-id="@user.Id" title="Change Password" asp-controller="User"><i class="fas fa-key"></i></a>
                                        <a class="btn btn-sm btn-primary normalButton" asp-action="Edit" asp-controller="Roles" asp-route-userid="@user.Id" title="Access rights"><i class="fas fa-universal-access"></i></a>

                                        <button class="btn btn-sm btn-danger normalButton" title="Delete" type="submit">
                                            <i class="fas fa-user-minus"></i>
                                        </button>

                                    </form>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


